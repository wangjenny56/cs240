
public class Assignment_1 {

	public static String decToTwoBin (int value) {
		
		int decimalValue = Math.abs(value);
		int decimal = Math.abs(value);
		String TwoBin = "";
		String msBit = "";
		
		if(value > 0) {
			msBit = "0";
		}
		
		while (decimalValue != 0) {
			decimalValue = decimalValue / 2;
			System.out.println(decimalValue);
			String bit = String.valueOf(decimal % 2);
			System.out.println("this is " + bit);
			TwoBin = bit + TwoBin;
			decimal = decimalValue;
		}
		
		if (TwoBin.length() > 8) {
			return "Cannot be expressed with 8 binary digits";
		}
		
		if(TwoBin.length() != 8) {
			int zeroCount = 7 - TwoBin.length();
			String zeros = "";
			for (int i = 0; i < zeroCount; i++) {
				zeros = zeros + "0";
			}
			return zeros + msBit + TwoBin;
		}

		return msBit + TwoBin;
		
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String hello = "011";
		String num = "2";
		String hello2 = num + hello;
		String it = decToTwoBin(49);
		System.out.println(it);
		
	}

}
