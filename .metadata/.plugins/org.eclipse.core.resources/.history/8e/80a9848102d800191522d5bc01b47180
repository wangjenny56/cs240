
public class Assignment_1 {

	public static String decToTwoBin (int value) {
		
		int decimalValue = Math.abs(value);
		int decimal = Math.abs(value);
		String TwoBin = "";
		String msBit = "";
		String zeros = "";
		
		while (decimalValue != 0) {
			decimalValue = decimalValue / 2;
			System.out.println(decimalValue);
			String bit = String.valueOf(decimal % 2);
			System.out.println("this is " + bit);
			TwoBin = bit + TwoBin;
			decimal = decimalValue;
		}
		
		if (TwoBin.length() > 8) {
			return "Cannot be expressed with 8 binary digits";
		}
		
		if(TwoBin.length() != 8) {
			int zeroCount = 7 - TwoBin.length();
			for (int i = 0; i < zeroCount; i++) {
				zeros = zeros + "0";
			}
			System.out.println("this is " + msBit);
		}
		
		if(value < 0){
			System.out.println("negative");
			
			String TrueMag = zeros + TwoBin;
			char[] ch = TrueMag.toCharArray();
			System.out.println(ch);
			for (int i = 0; i < TrueMag.length(); i++) {
				if (ch[i] == '0') {
					ch[i] = '1';
				}else {
					ch[i] = '1';
				}
			}
			System.out.println(msBit + zeros + TwoBin);
			return TrueMag;
		}
		
		if(value >= 0) {
			msBit = "0";
			return msBit + zeros + TwoBin;
		}

		return msBit + TwoBin;
		
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String hello = "011";
		String num = "2";
		String hello2 = num + hello;
		String it = decToTwoBin(-57);
		System.out.println(it);
		
	}

}
